<!DOCTYPE html>
<html>
  <head>
    <title>ModTwoProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <script
    src="https://code.jquery.com/jquery-3.1.1.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
    crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>

  
  </head>

  <body>
    <div id="universal-login-button">
      <% if current_user && request.env['PATH_INFO'] != "/"%>
        <%= button_to('Logout', logout_path, {method: :delete, id: 'universal-logout'}) %>
        <% elsif !current_user && request.env['PATH_INFO'] != "/login" && request.env['PATH_INFO'] != "/"%>

      <%= button_to('Login', login_path, {method: :get, id: 'universal-login'})%>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
