<h1>Login</h1>

<% if flash[:errors] %>
  <h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag 'Login' %>
<% end %>

<%= link_to 'Signup', new_user_path %>
